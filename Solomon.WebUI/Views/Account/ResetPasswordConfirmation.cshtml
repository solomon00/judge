@model Solomon.WebUI.Models.ResetPasswordConfirmModel

@{
    ViewBag.Title = "Восстановление пароля";
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<h2>Восстановление пароля</h2>

<section id="resetPasswordForm">
@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Форма восстановления пароля</legend>

 @*       <div class="editor-label">
            @Html.LabelFor(model => model.Token)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Token)
            @Html.ValidationMessageFor(model => model.Token)
        </div>*@

        @Html.Hidden("Token", Model.Token)

        <div class="row">
            @Html.LabelFor(model => model.NewPassword)
            <div class="inputs">
                <span class="input_wrapper">@Html.TextBoxFor(model => model.NewPassword, new { @class = "text" })</span>
                <span class="system negative">@Html.ValidationMessageFor(model => model.NewPassword)</span>
            </div>
        </div>
        <div class="row">
            @Html.LabelFor(model => model.ConfirmPassword)
            <div class="inputs">
                <span class="input_wrapper">@Html.TextBoxFor(model => model.ConfirmPassword, new { @class = "text" })</span>
                <span class="system negative">@Html.ValidationMessageFor(model => model.ConfirmPassword)</span>
            </div>
        </div>
        
        <p>
            <input class="button" type="submit" value="Сохранить" />
        </p>
    </fieldset>
}
</section>