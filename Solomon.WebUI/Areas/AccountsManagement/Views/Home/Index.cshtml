@model Solomon.WebUI.Areas.AccountsManagement.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Управление аккаунтами";
    Layout = "~/Areas/AccountsManagement/Views/Shared/_Layout.cshtml";
}
<h2>Управление пользователями и ролями</h2>
<p>Система для управления аккаунтами и уровнем доступа пользователей</p>
<div class="fl w48pc mr20">
    <fieldset>
        <legend>Управление пользователями</legend>
        <p>@Html.ActionLink("Аккаунты", "Index", "Membership", new { Area = "AccountsManagement" }, null)
            | @Html.ActionLink("Создать аккаунт", "CreateUser", "Membership", new { Area = "AccountsManagement" }, null)
            | @Html.ActionLink("Привязать роли", "GrantRolesToUser", "Membership", new { Area = "AccountsManagement" }, null)
        </p>
        <table>
            <tr>
                <td>Всего пользователей:</td>
                <td>@Model.TotalUserCount</td>
            </tr>
            @if (Roles.IsUserInRole("Administrator"))
            {
            <tr>
                <td>Пользователей онлайн:</td>
                <td>@Model.TotalOnlineUsersCount</td>
            </tr>
            @*<tr>
                <td>Авторизованных пользователей:</td>
                <td>@Model.TotalAuthenticatedUsersCount</td>
            </tr>*@
            }
        </table>
    </fieldset>
</div>
@if (Roles.IsUserInRole("Administrator"))
{
<div class="fr w48pc">
    <fieldset>
        <legend>Управление ролями</legend>
        <p>@Html.ActionLink("Роли", "Index", "Role", new { area = "AccountsManagement" }, null)</p>
        <table>
            <tr>
                <td>Всего ролей:</td>
                <td>@Model.TotalRolesCount</td>
            </tr>
        </table>
    </fieldset>
</div>
}
